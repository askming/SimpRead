{
  "manifest_version": 3,
  "name": "Save Article to GitHub",
  "version": "0.1",
  "description": "Save the current web article as Markdown or HTML to a GitHub repo with one click.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://api.github.com/*"],
  "action": { "default_popup": "popup.html", "default_icon": "icon.png" },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "background": { "service_worker": "background.js" }
}
